<script type="text/javascript">
$(document).ready(function(){
    $('.datepicker').datepicker({
      startDate: '0',
      format: "yyyy-mm-dd",

    });
  });
</script>

<div class="row">
  <%= form_for [list, item] do |f| %>
  <div class= "col-md-7">
    <%= f.text_field :description, class: "form-control", placeholder: 'New task'%>
  </div>
    <div class="col-md-5" align="right">
      <div class="form-group">
	Due
	<%= text_field_tag :deadline, value = Date.today, class: "form-control form-inline datepicker", id: "inl" %>
    	Remind me?
	<%= f.select(:remind,
	    options_for_select( [
	    ['Yes', true],
	    ['No', false]
	    ] ), {}, {class: "form-control form-inline", id: "inl"}) %>

	<%= f.submit "Submit", class: "btn btn-default", id: "inl"%>
      </div>
    </div>
  <% end %>
</div>
