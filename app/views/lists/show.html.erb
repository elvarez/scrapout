<br/>

<div id="input">
  <div class="container">
        <%= render partial: 'items/form', locals: { list: @list, item: @list.items.build } %>
  </div>
</div>


<div id="todo">
  <center><h4><b> Todo </b></h4></center>
  <div class="tabbable todo">
    <ul class="nav nav-tabs todo">
      <li class="active"><a href="#allt" data-toggle="tab">All</a></li>
      <li><a href="#shorttermt" data-toggle="tab">Short Term</a></li>
      <li><a href="#longtermt" data-toggle="tab">Long Term</a></li>
    </ul>
    <div class="tab-content todo">
      <div class="tab-pane active itembox" id="allt">
	<p> <%= render partial: 'items/todo', collection: @todoall, as: :todo_item %></p>
      </div>
      <div class="tab-pane itembox" id="shorttermt">
	<p><%= render partial: 'items/todo', collection: @todoshort, as: :todo_item %></p>
      </div>
      <div class="tab-pane itembox" id="longtermt">
	<p><%= render partial: 'items/todo', collection: @todolong, as: :todo_item %></p>
      </div>
    </div>
  </div>
</div>


<div id="done">
  <center><h4><b> Done </b></h4></center>
  <div class="tabbable done">
    <ul class="nav nav-tabs done">
      <li class="active"><a href="#lastweekd" data-toggle="tab">Last week</a></li>
      <li><a href="#alld" data-toggle="tab">All</a></li>
    </ul>
    <div class="tab-content done">
      <div class="tab-pane active itembox" id="lastweekd">
	<p><%= render partial: "items/done", collection: @donelastw, as: :done_item %></p>
      </div>
      <div class="tab-pane itembox" id="alld">
	<p><%= render partial: "items/done", collection: @doneall, as: :done_item %></p>
      </div>
    </div>
  </div>
</div>


<div id="missed">
  <center><h4><b> Missed </b></h4></center>
  <div class="tabbable missed">
    <ul class="nav nav-tabs missed">
      <li class="active"><a href="#lastweekm" data-toggle="tab">Last week</a></li>
      <li><a href="#allm" data-toggle="tab">All</a></li>
    </ul>
    <div class="tab-content missed">
      <div class="tab-pane active itembox" id="lastweekm">
	<p><%= render partial: "items/missed", collection: @missedlastw, as: :missed_item %></p>
      </div>
      <div class="tab-pane itembox" id="allm">
	<p><%= render partial: "items/missed", collection: @missedall, as: :missed_item %></p>
      </div>
    </div>
  </div>
</div>
